general {
        colors = true
        interval = 5
}

{{ if eq .chezmoi.hostname "nano" }}
order += "battery all"
{{ end }}
order += "disk /"
order += "memory"
order += "tztime berlin"
order += "tztime local"

battery all {
        last_full_capacity = true
	integer_battery_capacity = true
        format = "%status %percentage %remaining %consumption"
}

disk "/" {
        format = "%avail"
}

memory {
        format = "%used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

